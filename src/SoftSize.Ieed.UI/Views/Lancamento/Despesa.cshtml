@model SoftSize.Ieed.ViewModels.LancamentoDespesaModel
@{
    ViewBag.Title = "Despesa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    $(document).ready(function () {


           jQuery("#DataCompra").datepicker({
                  defaultDate: "+1w",
                  changeMonth: true,
                  numberOfMonths: 1
           });
       jQuery("#DataDeVencimento").datepicker({
                  defaultDate: "+1w",
                  changeMonth: true,
                  numberOfMonths: 1
              });


        $("#CentroDeCustoLancamentoId").tokenInput('@Url.Content("~/CentroDeCusto/ProcurarCentroDeCustoPor")', {
            tokenLimit: 1,
            minChars: 1,
            hintText: "Procurar Embarcação por Código, Nome, Tipo de Tanque ou Placa.",
            noResultsText: "Nenhuma embarcação encontrada...",
            searchingText: "Procurando Embarcações...",
            onDelete: function (dateText, inst) {

            },
            onAdd: function (dateText, inst) {
            }
        });
    });
}

<style>
    .ui-timepicker-div .ui-widget-header
    {
        margin-bottom: 8px;
    }
    .ui-timepicker-div dl
    {
        text-align: left;
    }
    .ui-timepicker-div dl dt
    {
        height: 25px;
    }
    .ui-timepicker-div dl dd
    {
        margin: -25px 0 10px 65px;
    }
    .ui-timepicker-div td
    {
        font-size: 90%;
    }
</style>
<h1>
    Despesa</h1>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Lançamento de Despesas</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.CentroDeCustoLancamentoId)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.CentroDeCustoLancamentoId, new { @class = "input-box", style = "width: 300px;" })
            @Html.ValidationMessageFor(model => model.CentroDeCustoLancamentoId, null, new { @class = "message-validator" })
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.NumeroDoDocumento)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.NumeroDoDocumento, new { @class = "input-box", style = "width: 300px;" })
            @Html.ValidationMessageFor(model => model.NumeroDoDocumento)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Fornecedor)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Fornecedor, new { @class = "input-box", style = "width: 300px;" })
            @Html.ValidationMessageFor(model => model.Fornecedor)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.DataCompra)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.DataCompra, new { @class = "input-box", style = "width: 300px;" })
            @Html.ValidationMessageFor(model => model.DataCompra, null, new { @class = "message-validator" })
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.DataDeVencimento)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.DataDeVencimento, new { @class = "input-box", style = "width: 300px;" })
            @Html.ValidationMessageFor(model => model.DataDeVencimento, null, new { @class = "message-validator" })
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Valor)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Valor, new { @class = "input-box", style = "width: 300px;" })
            @Html.ValidationMessageFor(model => model.Valor, null, new { @class = "message-validator" })
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Observacao)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Observacao, new { @class = "input-textarea" })
            @Html.ValidationMessageFor(model => model.Observacao, null, new { @class = "message-validator" })
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.EfetivarPagamento)
        </div>
        <div class="editor-field">
            @Html.CheckBoxFor(model => model.EfetivarPagamento, new { @class = "checkbox" })
        </div>
        <p>
            <input type="submit" value="Incluir Lançamento" />
        </p>
    </fieldset>
}
