@model SoftSize.Ieed.ViewModels.LancamentoMensalidadeLoteViewModel
@{
    ViewBag.Title = "LancamentoEmLote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Lançamento de Mensalidades em Lote.</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Dados do Periodo da Mensalidade</legend>
        <div>
            <div>
                <label>
                    Ano e Mes de Referência</label>
            </div>
            <div>
                @Html.DropDownListFor(model => model.CentroDeCustoLancamento.Id,
                    new SelectList(
                        Model.CentrosDeCusto, "Id", "Descricao"
                    ), string.Empty, new { @class = "input-box", style = "width: 300px;" })
                @Html.ValidationMessageFor(model => model.CentroDeCustoLancamento.Id)
            </div>
        </div>
        <p>
            <input type="submit" value="Lançar" />
        </p>
    </fieldset>
}