@model SoftSize.Ieed.ViewModels.LancamentoCerimoniaModel
@{
    ViewBag.Title = "Cerimonia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Associado: @Model.Associado.Nome</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Associado.Id)
    <fieldset>
        <legend>Lançamento de Cerimonia para Associado</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.CentroDeCustoLancamento.Id)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.CentroDeCustoLancamento.Id,
                    new SelectList(
                        Model.CentrosDeCusto, "Id", "Nome"
                    ), string.Empty, new { @class = "input-box", style = "width: 300px;" })
            @Html.ValidationMessageFor(model => model.CentroDeCustoLancamento.Id, null, new { @class = "message-validator" })
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Valor)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Valor, new { @class = "input-box", style = "width: 300px;" })
            @Html.ValidationMessageFor(model => model.Valor, null, new { @class = "message-validator" })
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}