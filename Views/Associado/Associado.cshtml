            <div>
                @Html.LabelFor(model => model.Email)
            </div>
            <div>
                @Html.TextBoxFor(model => model.Email, new { @class = "input-box" , style="width: 300px;" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>
