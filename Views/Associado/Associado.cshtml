<link href="@Url.Content("~/Content/themes/base/jquery.ui.button.css")" rel="stylesheet" type="text/css" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Hidden("Id", ViewData.Model.Id)
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Dados do Associado</legend>
        <div>
            <div>
                @Html.LabelFor(model => model.Nome)
            </div>
            <div>
                @Html.TextBoxFor(model => model.Nome, new { @class = "input-box" , style="width: 300px;" })
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
        </div>
        <div>
            <div>
                @Html.LabelFor(model => model.NomeDeUsuario)
            </div>
            <div>
                @Html.TextBoxFor(model => model.NomeDeUsuario, new { @class = "input-box" , style="width: 300px;" })
                @Html.ValidationMessageFor(model => model.NomeDeUsuario)
