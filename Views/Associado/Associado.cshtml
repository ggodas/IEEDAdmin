        {
            <div>
                <div>
                    @Html.LabelFor(model => model.Dependente)
                </div>
                <div>
                    @Html.DropDownListFor(model => model.Dependente,
                    new SelectList(
                        Model.Associados, "Id", "Nome"
                    ), string.Empty, new { @class = "input-box" , style="width: 300px;" })
                    @Html.ValidationMessageFor(model => model.Dependente)
