@model SoftSize.Ieed.ViewModels.CentroDeCustoViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section declarationScripts{
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}


@section scripts{
    $(document).ready(function () {
        $("#Data").datepicker({
            defaultDate: "+1w",
            changeMonth: true,
            maxDate: "+0D"
        });
    });
}

<h2>Novo Centro de Custo</h2>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Novo Centro de Custo</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Descricao)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Descricao, new { @class = "input-box", @style="width: 100%;" })
            @Html.ValidationMessageFor(model => model.Descricao, null, new { @class = "message-validator" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Data)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Data, new { @class = "input-box", @readonly = "true" })
            @Html.ValidationMessageFor(model => model.Data, null, new { @class = "message-validator" })  
        </div>

        <p>
            <input type="submit" value="Criar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
